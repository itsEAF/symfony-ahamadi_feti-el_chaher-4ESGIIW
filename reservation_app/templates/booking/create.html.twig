{% extends 'base.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Réserver le service : {{ service.name }}</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success my-3">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger my-3">
            {{ message }}
        </div>
    {% endfor %}

    <div class="card shadow-sm p-4 mb-5">
        <h2 class="card-title text-center mb-4">Informations de la réservation</h2>
        <p class="card-text text-muted text-center">Veuillez remplir les détails de votre réservation pour le service : <strong>{{ service.name }}</strong></p>

        <!-- Affichage du service sélectionné -->
        <div class="form-group mb-3">
            <label class="form-label">Service sélectionné</label>
            <p class="form-control">{{ service.name }} - {{ service.price }} €</p>
        </div>

        {{ form_start(form, {'attr': {'class': 'form-container'}}) }}
        
        <div class="form-group mb-3">
            {{ form_label(form.date, 'Date de réservation', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.date) }}
        </div>

        <div class="form-group mb-3">
            <h4 class="mb-3">Informations sur l'utilisateur</h4>
            
            <div class="form-group">
                {{ form_label(form.userAppli.name, 'Nom de l\'utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.userAppli.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.userAppli.name) }}
            </div>

            <div class="form-group">
                {{ form_label(form.userAppli.email, 'Email de l\'utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.userAppli.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.userAppli.email) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn w-100 mt-3">Confirmer la réservation</button>
        
        {{ form_end(form) }}

        <a href="{{ path('app_service_list') }}" class="btn btn-secondary w-100 mt-3">Retour à la liste des services</a>
        
    </div>
</div>
{% endblock %}
